{
  "name": "hovbase",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:e2e": "astro dev --mode test",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:services": "vitest run --config vitest.services.config.ts",
    "test:components": "vitest run src/test/unit/components/**/*.test.tsx",
    "test:unit": "vitest run src/test/unit/**/*.test.{ts,tsx}",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:test": "TEST_ENVIRONMENT=test playwright test --project=test",
    "test:e2e:test:ui": "TEST_ENVIRONMENT=test playwright test --project=test --ui",
    "test:e2e:test:debug": "TEST_ENVIRONMENT=test playwright test --project=test --debug",
    "test:e2e:cloud": "NODE_ENV=test playwright test --config=playwright.config.ts",
    "test:e2e:cloud:ui": "NODE_ENV=test playwright test --ui --config=playwright.config.ts",
    "test:e2e:headed": "NODE_ENV=test playwright test --config=playwright.config.ts --headed",
    "test:e2e:trace": "NODE_ENV=test playwright test --config=playwright.config.ts --trace on",
    "test:typecheck": "tsc --noEmit",
    "test:all": "npm run test:typecheck && npm run test && npm run test:e2e:cloud",
    "test:smoke": "npm run test:unit && npm run test:e2e:cloud --grep='smoke'",
    "test:ci": "npm run test:typecheck && npm run test && npm run test:e2e:cloud --reporter=junit"
  },
  "dependencies": {
    "@astrojs/node": "^9.1.3",
    "@astrojs/react": "4.2.2",
    "@astrojs/sitemap": "3.3.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.52.0",
    "@tailwindcss/vite": "4.0.17",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "astro": "5.5.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "4.0.17",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/react": "^4.9.0",
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.23.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "8.28.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^17.2.1",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.2.5",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.5",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-aeaed83-20250323",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "15.5.0",
    "msw": "^2.3.5",
    "prettier-plugin-astro": "0.14.1",
    "react-router-dom": "^7.8.0",
    "supertest": "^7.0.0",
    "typescript-eslint": "8.28.0",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
