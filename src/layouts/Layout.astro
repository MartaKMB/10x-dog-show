---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "HovBase" } = Astro.props;
const auth = Astro.locals.auth;
const user = auth?.user ?? null;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="/mobile-menu.js" defer></script>
  </head>
  <body data-authenticated={user ? "true" : "false"}>
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-gray-100 to-amber-50/30">
      <!-- Header -->
      <header class="bg-gray-900 shadow-lg border-b border-amber-600/30" data-testid="main-header">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <div class="flex items-center">
              <a href="/" class="flex items-center space-x-2" data-testid="logo-link">
                <div class="w-8 h-8 rounded-lg flex items-center justify-center overflow-hidden">
                  <img src="/logo.png" alt="HovBase Logo" class="w-full h-full object-cover" />
                </div>
                <span class="text-xl font-semibold text-amber-400">HovBase</span>
              </a>
            </div>

            <!-- Navigation -->
            <nav class="hidden md:flex space-x-8" data-testid="desktop-navigation">
              <a
                href="/"
                class="text-gray-300 hover:text-amber-400 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                data-testid="nav-dashboard-link"
              >
                Dashboard
              </a>
              <a
                href="/shows"
                class="text-gray-300 hover:text-amber-400 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                data-testid="nav-shows-link"
              >
                Wystawy
              </a>
              <a
                href="/dogs"
                class="text-gray-300 hover:text-amber-400 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                data-testid="nav-dogs-link"
              >
                Psy
              </a>
            </nav>

            <!-- User menu -->
            <div class="flex items-center space-x-4" data-testid="user-menu">
              {
                user ? (
                  <>
                    <div class="hidden sm:block text-sm text-gray-300" data-testid="user-email">
                      {user.email}
                    </div>
                    <form
                      method="POST"
                      action="/api/auth/logout"
                      class="hidden md:block"
                      onsubmit="this.querySelector('button')?.setAttribute('disabled','true')"
                      data-testid="logout-form"
                    >
                      <button
                        type="submit"
                        class="px-3 py-1.5 rounded-md border border-amber-500 text-sm text-amber-400 hover:bg-amber-500 hover:text-gray-900 transition-colors"
                        data-testid="logout-button"
                      >
                        Wyloguj
                      </button>
                    </form>
                  </>
                ) : (
                  <div class="hidden md:flex items-center space-x-3" data-testid="auth-buttons">
                    <a
                      href="/auth/login"
                      class="px-3 py-1.5 rounded-md border border-amber-500 text-sm text-amber-400 hover:bg-amber-500 hover:text-gray-900 transition-colors"
                      data-testid="login-link"
                    >
                      Zaloguj
                    </a>
                    <a
                      href="/auth/signup"
                      class="px-3 py-1.5 rounded-md bg-amber-500 text-gray-900 text-sm font-medium hover:bg-amber-400 transition-colors"
                      data-testid="register-link"
                    >
                      Rejestracja
                    </a>
                  </div>
                )
              }

              <!-- Mobile menu button -->
              <button
                type="button"
                class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-amber-400 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-amber-500 transition-colors"
                aria-controls="mobile-menu"
                aria-expanded="false"
                id="mobile-menu-button"
                data-testid="mobile-menu-button"
              >
                <span class="sr-only">Otwórz menu główne</span>
                <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16">
                  </path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu" data-testid="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
            <a
              href="/"
              class="text-gray-600 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium"
              data-testid="mobile-nav-dashboard-link"
            >
              Dashboard
            </a>
            <a
              href="/shows"
              class="text-gray-600 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium"
              data-testid="mobile-nav-shows-link"
            >
              Wystawy
            </a>
            <a
              href="/dogs"
              class="text-gray-600 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium"
              data-testid="mobile-nav-dogs-link"
            >
              Psy
            </a>
            {
              user ? (
                <form method="POST" action="/api/auth/logout" class="px-3 py-2" data-testid="mobile-logout-form">
                  <button
                    type="submit"
                    class="w-full px-3 py-2 rounded-md border border-gray-300 text-sm text-gray-700 hover:bg-gray-50"
                    data-testid="mobile-logout-button"
                  >
                    Wyloguj
                  </button>
                </form>
              ) : (
                <div class="flex space-x-2 px-3 py-2" data-testid="mobile-auth-buttons">
                  <a
                    href="/auth/login"
                    class="flex-1 text-center px-3 py-2 rounded-md border border-gray-300 text-sm text-gray-700 hover:bg-gray-50"
                    data-testid="mobile-login-link"
                  >
                    Zaloguj
                  </a>
                  <a
                    href="/auth/signup"
                    class="flex-1 text-center px-3 py-2 rounded-md bg-amber-600 text-white text-sm hover:bg-amber-700"
                    data-testid="mobile-register-link"
                  >
                    Rejestracja
                  </a>
                </div>
              )
            }
          </div>
        </div>
      </header>

      <!-- Main content -->
      <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8" data-testid="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<!-- Client-side toggling script removed to avoid parser issues; SSR handles visibility. -->
