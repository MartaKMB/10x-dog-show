---
import Layout from "../../../layouts/Layout.astro";
import ShowDetailsView from "../../../components/shows/ShowDetailsView.tsx";

// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore Astro typing
const { showId } = Astro.params;

// Sprawdź czy użytkownik jest zalogowany
const isAuthenticated = !!Astro.locals.auth?.user;
---

<Layout title="Szczegóły wystawy - HovBase">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Szczegóły wystawy</h1>
        </div>
        <div class="flex items-center gap-2 text-sm text-gray-500">
          {isAuthenticated ? <span>Zalogowany użytkownik</span> : <span>Gość - tryb podglądu</span>}
        </div>
      </div>
    </div>

    <!-- Show Details -->
    <div class="bg-white shadow rounded-lg">
      {showId && <ShowDetailsView showId={showId} isAuthenticated={isAuthenticated} client:load />}
    </div>
  </div>
</Layout>
