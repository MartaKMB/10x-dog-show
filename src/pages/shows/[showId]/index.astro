---
import Layout from "../../../layouts/Layout.astro";
import ShowDetailsView from "../../../components/shows/ShowDetailsView.tsx";

const userRole = "club_board";
// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore Astro typing
const { showId } = Astro.params;
---

<Layout title="Szczegóły wystawy - Klub Hovawarta Show">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Szczegóły wystawy</h1>
          <p class="text-gray-600">Zarządzanie wystawą klubową</p>
        </div>
        <div class="flex items-center gap-2 text-sm text-gray-500">
          <span>Rola: Członek zarządu klubu</span>
        </div>
      </div>
    </div>

    {/* Preview banner for guests */}
    { /* eslint-disable-next-line @typescript-eslint/ban-ts-comment */ }
    { /* @ts-ignore Astro typing */ }
    { !Astro.locals.user && (
      <div class="bg-amber-50 border border-amber-200 text-amber-800 rounded-lg p-4">
        To jest tryb podglądu. Zaloguj się, aby edytować dane wystawy i listę psów.
      </div>
    ) }

    <!-- Show Details -->
    <div class="bg-white shadow rounded-lg">
      <ShowDetailsView showId={showId} userRole={userRole} client:load />
    </div>
  </div>
</Layout>
