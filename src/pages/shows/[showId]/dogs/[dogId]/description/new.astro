  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nowy opis psa</title>
  <link rel="icon" type="image/png" href="/favicon.png">
</head>
<body>
  <div class="container mx-auto px-4 py-8">
    <div id="description-editor-root" data-show-id={showId} data-dog-id={dogId} data-mode="create"></div>
  </div>
  <script type="module" src="/src/scripts/mountDescriptionEditor.tsx"></script>
</body>
</html>
