---
import Layout from "../../../../../../layouts/Layout.astro";
import { DescriptionEditor } from "../../../../../../components/DescriptionEditor.tsx";

const { showId, dogId } = Astro.params;

if (!showId || !dogId) {
  return Astro.redirect("/404");
}
---

<Layout title="Nowy opis psa - HovBase">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Nowy opis psa</h1>
      <p class="text-gray-600">Tworzenie opisu dla psa w wystawie</p>
    </div>

    <!-- Description Editor -->
    <div class="bg-white shadow rounded-lg">
      <DescriptionEditor client:load showId={showId} dogId={dogId} mode="create" />
    </div>
  </div>
</Layout>
