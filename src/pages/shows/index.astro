---
import Layout from "../../layouts/Layout.astro";
import ShowsListView from "../../components/shows/ShowsListView.tsx";

// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore Astro typing issue in lints
const isAuthenticated = Boolean(Astro.locals.auth?.user);
const userRole = "club_board";
---

<Layout title="Wystawy - HovBase">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-gradient-to-r from-gray-900 to-gray-800 shadow-xl rounded-lg p-6 border border-amber-600/30">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-amber-400 mb-2">Archiwum wystaw klubowych Hovawarta</h1>
          <p class="text-gray-300">
            To miejsce, gdzie gromadzimy i udostępniamy wyniki oraz szczegóły wszystkich klubowych wystaw Hovawartów – zarówno najnowszych, jak i archiwalnych.
          </p>
        </div>
        {
          isAuthenticated && userRole === "club_board" && (
            <a
              href="/shows/new"
              class="bg-amber-500 hover:bg-amber-400 text-gray-900 px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-lg"
            >
              + Nowa wystawa
            </a>
          )
        }
      </div>
    </div>

    <!-- Shows List -->
    <div class="bg-white shadow-lg rounded-lg border border-gray-200">
      <ShowsListView userRole={userRole} client:load />
    </div>
  </div>
</Layout>
