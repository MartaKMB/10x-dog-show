---
import Layout from "../../layouts/Layout.astro";
import ShowsListView from "../../components/shows/ShowsListView.tsx";

// TODO: Get user role from authentication
const userRole = "club_board";
---

<Layout title="Wystawy - Klub Hovawarta Show">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Wystawy klubowe</h1>
          <p class="text-gray-600">Zarządzanie wystawami bez rejestracji</p>
          <p class="text-sm text-gray-500 mt-1">
            Wystawy będą tworzone najwcześniej w dniu wystawy, zazwyczaj po niej, aby przechowywać te informacje w
            jednym miejscu w tej aplikacji.
          </p>
        </div>
        {
          userRole === "club_board" && (
            <a
              href="/shows/new"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium"
            >
              + Nowa wystawa
            </a>
          )
        }
      </div>
    </div>

    <!-- Shows List -->
    <div class="bg-white shadow rounded-lg">
      <ShowsListView userRole={userRole} client:load />
    </div>
  </div>
</Layout>
