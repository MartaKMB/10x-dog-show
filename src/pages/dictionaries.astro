---
import Layout from "../layouts/Layout.astro";
import DictionariesView from "../components/dictionaries/DictionariesView.tsx";
---

<Layout title="Słowniki - 10x Dog Show">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Słowniki referencyjne</h1>
      <p class="text-gray-600">Przeglądaj rasy psów i oddziały ZKwP</p>
    </div>

    <!-- Dictionaries Content -->
    <div class="bg-white shadow rounded-lg">
      <DictionariesView client:load />
    </div>
  </div>
</Layout> 
