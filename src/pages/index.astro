---
import Layout from "../layouts/Layout.astro";
import NextShowCard from "../components/shows/NextShowCard.tsx";

// TODO: Get user role from authentication
const userRole = "admin";
---

<Layout title="Dashboard - 10x Dog Show">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Witaj w 10x Dog Show</h1>
      <p class="text-gray-600">System zarządzania wystawami psów rasowych ZKwP</p>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Szybkie akcje</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <a href="/shows" class="bg-blue-600 hover:bg-blue-700 text-white p-4 rounded-lg text-center transition-colors">
          <div class="text-2xl mb-2">📋</div>
          <div class="font-medium">Wystawy</div>
          <div class="text-sm opacity-90">Zarządzaj wystawami</div>
        </a>
        {(userRole === "department_representative" || userRole === "admin") && (
          <a href="/members" class="bg-green-600 hover:bg-green-700 text-white p-4 rounded-lg text-center transition-colors">
            <div class="text-2xl mb-2">👥</div>
            <div class="font-medium">Członkowie</div>
            <div class="text-sm opacity-90">Właściciele i psy</div>
          </a>
        )}
        <a href="/judges" class="bg-purple-600 hover:bg-purple-700 text-white p-4 rounded-lg text-center transition-colors">
          <div class="text-2xl mb-2">⚖️</div>
          <div class="font-medium">Sędziowie</div>
          <div class="text-sm opacity-90">Zarządzaj sędziami</div>
        </a>
      </div>
    </div>

    <!-- Role-specific actions -->
    {(userRole === "department_representative" || userRole === "admin") && (
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Akcje organizatora</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="/shows/new" class="bg-indigo-600 hover:bg-indigo-700 text-white p-4 rounded-lg text-center transition-colors">
            <div class="text-2xl mb-2">➕</div>
            <div class="font-medium">Nowa wystawa</div>
            <div class="text-sm opacity-90">Utwórz nową wystawę</div>
          </a>
          <a href="/members" class="bg-green-600 hover:bg-green-700 text-white p-4 rounded-lg text-center transition-colors">
            <div class="text-2xl mb-2">👥</div>
            <div class="font-medium">Dodaj członka</div>
            <div class="text-sm opacity-90">Dodaj nowego właściciela psa</div>
          </a>
        </div>
      </div>
    )}

    {/* Sekcja "Najbliższe wystawy" - widoczna dla sekretarzy i administratorów */}
    {(userRole === "secretary" || userRole === "admin") ? (
      <div class="bg-white shadow rounded-lg p-6">
        <!-- Najbliższe wystawy - tylko dla sekretarzy -->
        <NextShowCard client:load userRole={userRole} />
      </div>
    ) : null}

    {/* Sekcja dla przedstawicieli i administratorów - statystyki zamiast najbliższych wystaw */}
    {(userRole === "department_representative" || userRole === "admin") && (
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Statystyki</h2>
        <div class="text-center py-8">
          <div class="text-4xl mb-4">📊</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Statystyki w przygotowaniu
          </h3>
          <p class="text-gray-600">
            Ta sekcja będzie zawierać statystyki dla przedstawicieli oddziałów.
          </p>
        </div>
      </div>
    )}

    <!-- System Info -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Informacje o systemie</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="font-medium text-gray-900">Wersja</div>
          <div class="text-gray-600">1.0.0</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="font-medium text-gray-900">Status</div>
          <div class="text-green-600">Aktywny</div>
        </div>
        <div class="text-center p-3 bg-gray-50 rounded-lg">
          <div class="font-medium text-gray-900">Rola użytkownika</div>
          <div class="text-gray-600">{
            userRole === "department_representative" ? "Przedstawiciel związku" : 
            userRole === "admin" ? "Administrator" : 
            "Sekretarz"
          }</div>
        </div>
      </div>
    </div>
  </div>
</Layout>
