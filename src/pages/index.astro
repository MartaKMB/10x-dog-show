---
import Layout from "../layouts/Layout.astro";

import Dashboard from "../components/dashboard/Dashboard.tsx";

// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore Astro typing issue in lints
const isAuthenticated = Boolean(Astro.locals.auth?.user);
const userRole = "club_board";
---

<Layout title="Dashboard - HovBase">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-gradient-to-r from-gray-900 to-gray-800 shadow-xl rounded-lg p-6 border border-amber-600/30">
      <div class="flex items-start space-x-4 mb-4">
        <div class="flex-shrink-0 w-24 h-24 rounded-xl overflow-hidden shadow-lg border-2 border-amber-500/50">
          <img src="/logo.png" alt="HovBase Logo" class="w-full h-full object-cover" />
        </div>
        <div class="min-w-0 flex-1">
          <h1 class="text-2xl font-bold text-amber-400">Witaj w HovBase</h1>
          <p class="text-gray-300">Oficjalny system zarządzania danymi Klubu Hovawarta w Polsce</p>
          <p class="text-gray-300">Twoje miejsce do dokumentowania wystaw, budowania cyfrowej historii rasy i wspólnego rozwijania wiedzy o Hovawartach.</p>
        </div>
      </div>
    </div>

    <!-- Preview banner for guests -->
    {
      !isAuthenticated && (
        <div class="bg-gradient-to-r from-amber-50 to-amber-100 border border-amber-300 text-amber-800 rounded-lg p-4 shadow-md">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-medium">To jest tryb podglądu - dostępny dla wszystkich miłośników hovawartów.</span>
          </div>
          <p class="text-sm mt-2 text-amber-700">
            W trybie podglądu możesz przeglądać dane, ale nie możesz ich modyfikować. Aby testować funkcje edycji,
            zaloguj się lub zarejestruj.
          </p>
        </div>
      )
    }

    <!-- Main Dashboard Component -->
    <Dashboard client:load userRole={userRole} showQuickActions={isAuthenticated} isAuthenticated={isAuthenticated} />
  </div>
</Layout>
