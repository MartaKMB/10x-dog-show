---
import Layout from "../layouts/Layout.astro";

import Dashboard from "../components/dashboard/Dashboard.tsx";

// TODO: Get user role from authentication
const userRole = "club_board";
---

<Layout title="Dashboard - Klub Hovawarta Show">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Witaj w Klubie Hovawarta Show</h1>
      <p class="text-gray-600">System zarządzania wystawami klubowymi hovawartów</p>
    </div>

    <!-- Main Dashboard Component -->
    <Dashboard client:load userRole={userRole} />
  </div>
</Layout>
