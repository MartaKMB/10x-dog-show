---
import Layout from "../layouts/Layout.astro";

import Dashboard from "../components/dashboard/Dashboard.tsx";

// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore Astro typing issue in lints
const isAuthenticated = Boolean(Astro.locals.auth?.user);
const userRole = "club_board";
---

<Layout title="Dashboard - HovBase">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white shadow rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Witaj w HovBase!</h1>
      <p class="text-gray-600">System zarządzania wystawami klubowymi hovawartów</p>
    </div>

    <!-- Preview banner for guests -->
    {
      !isAuthenticated && (
        <div class="bg-amber-50 border border-amber-200 text-amber-800 rounded-lg p-4">
          To jest tryb podglądu - dostępny dla wszystkich milosników hovawartów.
        </div>
      )
    }

    <!-- Main Dashboard Component -->
    <Dashboard client:load userRole={userRole} showQuickActions={isAuthenticated} isAuthenticated={isAuthenticated} />
  </div>
</Layout>
