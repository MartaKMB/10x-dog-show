{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "printWidth": 120,
        "singleAttributePerLine": false,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSameLine": false
      }
    }
  ],
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all"
}
